<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Change Status of Quote</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group col-md-12">
                    <div class="mb-4">
                        <label class="control-label p-1">Status</label>
                        <select id="status" class="form-control form-select">
                            <option value="0">New</option>
                            <option value="1">Contacted</option>
                            <option value="2">Not Interested</option>
                            <option value="3">Rented</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveButtonForStatus">Save changes</button>
            </div>
        </div>
    </div>
</div>