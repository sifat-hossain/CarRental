@model Campoverde.QMS.Models.Quote

@{
    ViewData["Title"] = "Edit";
}

<hr />

<section>
    <div class="container">
        <div class="col-md-12 justify-content-end">
            <form asp-action="Edit">
                <div class="col col-sm-8 mb-3 mb-sm-0">
                    <div class="card  p-1 mb-3 bg-body-tertiary quoteForm">
                        <div class="card-body ">
                            <h5 class="card-title text-left mt-3 pb-3">Quote Edit</h5>
                            <div class="row g-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Vehicle Model|Year|Class</label>
                                    <select asp-for="VehicleId" class="form-control form-select" asp-items="ViewBag.VehicleId"></select>
                                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Customer</label>
                                    <select asp-for="CustomerId" class="form-control form-select" asp-items="ViewBag.CustomerId"></select>
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Vehicle Size</label>
                                    <select asp-for=VehicleSize id="vehicleSize" class="form-control form-select">
                                        <option selected>Choose Vehicle...</option>
                                        <option value="0">Small</option>
                                        <option value="1">Lerge</option>
                                        <option value="2">Medium</option>
                                    </select>
                                    <span asp-validation-for="VehicleSize" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Vehicle Type</label>
                                    <select asp-for="VehicleType" class="form-control form-select">
                                        <option selected>Choose Vehicle Type...</option>
                                        <option value="0">Manual</option>
                                        <option value="1">Automatic</option>
                                    </select>
                                    <span asp-validation-for="VehicleType" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Passengers / Guest Counts</label>
                                    <select asp-for=PassengerCount id="passengerCount" class="form-control form-select">
                                        <option selected>Choose Vehicle...</option>
                                        <option value="1">4 Persons</option>
                                        <option value="2">6 Persons</option>
                                    </select>
                                    <span asp-validation-for="PassengerCount" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Start Date</label>
                                    <input asp-for="StartDate" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">End Date</label>
                                    <input asp-for="EndDate" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Spanish Address</label>
                                    <input asp-for="SpanishAddress" class="form-control" />
                                    <span asp-validation-for="SpanishAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Special Requet</label>
                                    <input asp-for="SpecialRequet" class="form-control" />
                                    <span asp-validation-for="SpecialRequet" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label ">Quote Price</label>
                                    <input asp-for="QuotePrice" class="form-control" />
                                    <span asp-validation-for="QuotePrice" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Status" class="control-label"></label>
                                    <select asp-for=Status id="status" class="form-control form-select">
                                        <option value="0">New</option>
                                        <option value="1">Contacted</option>
                                        <option value="2">NotInterested</option>
                                        <option value="3">Rented</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                                    </label>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    </section>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
