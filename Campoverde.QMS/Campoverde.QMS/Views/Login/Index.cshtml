@using Campoverde.QMS.ViewModel
@model LoginViewModel


<section>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-3 mb-5 rounded" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h2 class="card-title text-center mb-5">Sign in</h2>
                <form asp-action="Index" method="post">
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-pink">Login</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="#">Forgot password?</a>
                </div>
                <div class="text-center mt-2">
                    <span>Don't have an account? <a href="#">Sign up</a></span>
                </div>
            </div>
        </div>
    </div>
</section>