                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryDrivingLicenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryDrivingLicenseNumber)
            </td>
